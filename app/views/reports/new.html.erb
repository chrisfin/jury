<div class="border-form-div">
  <h2><%= @header %></h2>
	  <%= simple_form_for(@report, html: {class: "form-horizontal"}) do |f| %>
	  	<%= f.error_notification %>
	  	<%= f.input :project_id, :input_html => { :value => @project.id}, label: @project.project_name %>
	  	<%= f.full_error :image_file_size, class: 'alert alert-error' %>
	  	<%= f.full_error :image_content_type, class: 'alert alert-error' %>
			
			<%= f.input :image, label: 'Upload JudgeReport Image' %>
	    <%= f.input :overall_grade, :collection => @grades %>
	    <%= f.input :pain_grade, :collection => @grades %>
	    <%= f.input :fix_grade, :collection => @grades %>

			<%= f.submit "Submit JudgeReport", class: "btn-action-bottom" %>
		<% end %>
</div>